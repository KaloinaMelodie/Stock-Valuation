@page
@model BackOffice.Pages.Produit.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Ajouter Produit</h1>
        
    <h4></h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Produit.Nom" class="control-label">Nom Produit</label>
                <input asp-for="Produit.Nom" class="form-control" />
                <span asp-validation-for="Produit.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.IdCategorieProduit" class="control-label">Categorie Produit</label>
                <select asp-for="Produit.IdCategorieProduit" class ="form-control" asp-items="ViewBag.IdCategorieProduit"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produit.IdMethod" class="control-label">Method</label>
                <select asp-for="Produit.IdMethod" class ="form-control" asp-items="ViewBag.IdMethod"></select>
            </div>
            <br/>
            <br/>
            
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
