                @*             </a> *@
                @*         </li> *@
                @*     </ul> *@
                @* </li> *@
            }
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-journal-text"></i><span>Produit</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Produit">
                            <i class="bi bi-circle"></i><span>Liste Produit</span>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Produit/Create">
                            <i class="bi bi-circle"></i><span>Creation Produit</span>
                        </a>
                    </li>
                   
                </ul>
            </li>
           
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#nav3-nav" data-bs-toggle="collapse" href="#">
